{
  "include": ["./src"],
  "exclude": ["./node_modules", "./build"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "removeComments": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": { "@imports/*": ["imports/*"] }
  }
}
